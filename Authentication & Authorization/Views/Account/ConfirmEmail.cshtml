@{
    ViewData["Title"] = "Email Confirmed";
}

<div class="flex items-center justify-center min-h-screen bg-gray-50">
    <div class="bg-white p-8 rounded-lg shadow-md max-w-md text-center">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">@ViewData["Title"]</h2>
        <p class="text-gray-600 mb-6">
            Your email has been successfully confirmed. You can now log in to your account.
        </p>
        <a href="@Url.Action("Login", "Account")"
           class="inline-block px-6 py-2 text-white bg-blue-600 hover:bg-blue-700 rounded-full transition duration-200">
            Log In
        </a>
    </div>
</div>
