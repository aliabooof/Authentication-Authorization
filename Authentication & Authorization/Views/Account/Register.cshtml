@using Authentication___Authorization.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Account.cshtml";
}


    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">Create an Account</h2>

        <form asp-action="Register" method="POST">
            <div class="mb-4">
                <label for="name" class="block text-sm font-medium text-gray-600">First Name</label>
                <input type="text" asp-for="FirstName" class="mt-2 p-2 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" >
                <span asp-validation-for="FirstName" class="text-red-400 text-"></span>
            </div>
            <div class="mb-4">
                <label for="name" class="block text-sm font-medium text-gray-600">First Name</label>
                <input type="text" asp-for="LastName" class="mt-2 p-2 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" >
                <span asp-validation-for="LastName" class="text-red-400 text-"> </span>
            </div>

            <div class="mb-4">
                <label for="email" class="block text-sm font-medium text-gray-600">Email Address</label>
                <input type="email" asp-for="Email" class="mt-2 p-2 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" >
                <span asp-validation-for="Email" class="text-red-400 text-"></span>
            </div>

            <div class="mb-4">
                <label for="password" class="block text-sm font-medium text-gray-600">Password</label>
                <input type="password" asp-for="Password" class="mt-2 p-2 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" >
                <span asp-validation-for="Password" class="text-red-400 text-"></span>
            </div>

            <div class="mb-4">
                <label for="confirm-password" class="block text-sm font-medium text-gray-600">Confirm Password</label>
                <input type="password" id="confirm-password" name="confirm-password" class="mt-2 p-2 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
          
            </div>

            <div class="mb-4">
                <label for="birthdate" class="block text-sm font-medium text-gray-600">Birth Date</label>
                <input type="date" asp-for="BirthDate" class="mt-2 p-2 w-full border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                <span asp-validation-for="BirthDate" class="text-red-400 text-"></span>
            </div>



            <div class="mb-6">
                <label class="inline-flex items-center text-sm text-gray-600">
                    <input type="checkbox" class="form-checkbox text-blue-600" >
                    <span class="ml-2">I agree to the <a href="#" class="text-blue-500">terms and conditions</a></span>
                   
                </label>
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">Register</button>
        </form>

        <p class="mt-4 text-center text-sm text-gray-600">
            Already have an account? <a href="#" class="text-blue-500">Login here</a>
        </p>
    </div>
